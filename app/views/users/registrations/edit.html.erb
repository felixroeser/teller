<div class='form-signin'>
  <h2 class='form-signin-heading'><%= t('users.edit.headline') %></h2>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, :required => true, :autofocus => true %>

      <%= f.input :email, :required => true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
      <%= f.input :password_confirmation, :required => false %>
      <%= f.input :locale, collection: Teller::GLOBALS[:locales].keys , prompt: 'Language', selected: I18n.locale %>
      <%= f.input :pseudo, as: :hidden, input_html: { value: 0 } %>
      <%= f.input :reviewed, as: :hidden, input_html: { value: 1 } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

  <%= link_to "Back", :back %>

</div>